OS_BY_UNAME=$(uname) 

export LINUX=
export GNU_USERLAND=
export OSX=

if [[ $OS_BY_UNAME == Linux ]]
then
        LINUX=1
        GNU_USERLAND=1
elif [[ $OS_BY_UNAME == Darwin ]]
then
        OSX=1
fi

# Detect Macports GNU userland installation
if [[ $OSX == 1 ]]
then
    if [[ -e /opt/local/libexec/gnubin ]]
    then
        GNU_USERLAND=1
    fi
fi


